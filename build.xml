<project name="CircuitCalculator">
	<!--
	by default Tarvis CI Launch "ant test" command
	the 'target' markup is used to show what travis must do.
	-->
	<delete dir="bin" />
	<mkdir dir="bin" />
	<javac debug="on" includeantruntime="false" srcdir="." destdir="bin" classpath="lib/junit-jupiter-api-5.0.0.jar" />
	<target name="test">
		<junit printsummary="on" showoutput="true" haltonfailure="yes" fork="true">
			<classpath>
				<pathelement location="lib/hamcrest-core-1.3.jar"/>
				<pathelement location="lib/junit-jupiter-api-5.0.0.jar"/>
				<pathelement location="lib/opentest4j-1.0.0.jar"/>
			</classpath>
			<formatter type="plain" usefile="false" />
			<test name="com.selltom.TestClass.arrondiTest" />
		</junit>
	</target>
</project>
