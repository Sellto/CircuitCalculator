<project name="TravisWithAntBase">
  <path id="class.path">

    <!-- include all jars in the lib directory and all sub-directories -->
    <fileset dir="${lib.dir}">
      <include name="**/*.jar" />
    </fileset>

  </path>
  <target name="test">
    <delete dir="bin" />
    <mkdir dir="bin" />
    <javac includeantruntime="false" srcdir="src" destdir="bin" classpath="lib/junit.jar" />
    <junit printsummary="on" showoutput="true">
      <classpath>
        <pathelement location="bin" />
        <pathelement location="lib/junit-jupiter-api-5.0.0.jar" />
        <pathelement location="lib/opentest4j-1.0.0.jar" />
      </classpath>
      <formatter type="plain" usefile="false" />
      <test name="be.selltom.TestClass.BaseTest" />
    </junit>
  </target>
</project>